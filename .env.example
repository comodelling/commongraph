# Root environment variables (example)
# Copy this to .env and customize for your setup

APP_ENV=development

# Database
POSTGRES_DB_URL=postgresql://postgres:postgres@postgres:5432/commongraph_db
ALLOWED_ORIGINS_RAW=http://localhost:5173,http://127.0.0.1:5173,https://yourdomain.com,https://www.yourdomain.com

# Toggle graph database
ENABLE_GRAPH_DB=false

# Admin credentials
INITIAL_ADMIN_USER=admin
INITIAL_ADMIN_PASSWORD=password

# Domain and SSL settings
DOMAIN=yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Public URLs (VITE_ prefix for frontend)
VITE_API_URL=http://localhost:8000
BACKEND_HOST=http://localhost:8000
FRONTEND_HOST=http://localhost:5173
